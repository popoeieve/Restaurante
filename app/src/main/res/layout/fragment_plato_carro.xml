<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlatoCarroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonFragmentPlatoCarro"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/plato"
            android:onClick="mostrarPlato"
            android:text="Button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1FragmentCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nombre artículo"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text2FragmentCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Descripción:"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Precio:"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="99,99€"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="MÁS" />

            <TextView
                android:id="@+id/editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="center"
                android:ems="2"
                android:textIsSelectable="false"
                android:text="0" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="MenOS" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:ems="10"
            android:textIsSelectable="false"
            android:text="Total:" />

    </LinearLayout>

</FrameLayout>