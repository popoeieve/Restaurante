<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imagenPopup"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textTituloConf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo del panel emergente"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblNumeroMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contenido del panel emergente" />

        <Button
            android:id="@+id/botonGuardarSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGREGAR AL CARRO" />

        <Button
            android:id="@+id/botonSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar"/>

    </LinearLayout>

</LinearLayout>