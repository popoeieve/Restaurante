<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:padding="40dp">
    <ImageView
        android:id="@+id/imagenPopup"
        android:layout_width="500dp"
        android:layout_height="500dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textTituloConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo del panel emergente"
            android:fontFamily="@font/hotpizza"
            android:textColor="#EAE5E3"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/lblNumeroMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hotpizza"
            android:textColor="#EAE5E3"
            android:textSize="70sp"
            android:text="99" />

        <TextView
            android:id="@+id/descripcionPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hotpizza"
            android:textColor="#EAE5E3"
            android:textSize="30sp"
            android:text="descripcion" />

        <Button
            android:id="@+id/botonGuardarSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/hotpizza"
            android:background="@drawable/boton_personalizado"
            android:layout_margin="10dp"
            android:textSize="50sp"
            android:text="AGREGAR" />

        <Button
            android:id="@+id/botonSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/hotpizza"
            android:background="@drawable/boton_personalizado"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:text="Cerrar"/>

    </LinearLayout>

</LinearLayout>